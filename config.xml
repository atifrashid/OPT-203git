<?xml version="1.0" encoding="utf-8"?>
<widget id="com.opt.warreg" version="203" versionCode="2.0.3" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">

	<name>OPT</name>
	<description>OPT APP</description>
	<author>EwebCraft</author>
	
	<preference name="permissions" value="none"/>
	
	<preference name="phonegap-version" value="cli-8.0.0" />
	
	<plugin name="amscomp-plugin-barcodescanner" source="npm" />
	<!--<plugin name="cordova-plugin-whitelist" />-->
	
	
	<icon src="icon.png"/>
	
	<platform name="ios">
		<icon src="logo_57x57.png" width="57" height="57" />
		<icon src="logo_72x72.png" width="72" height="72" />
		<icon src="logo_76x76.png" width="76" height="76" />
		<icon src="logo_120x120.png" width="120" height="120" />
		<icon src="logo_152x152.png" width="152" height="152" />
		<icon src="logo_512x512.png" width="512" height="512" />
		<icon src="logo_1024x1024.png" width="1024" height="1024" />        
	</platform>
	
	<platform name="android" />
	<platform name="winphone" />
	
	<gap:config-file platform="ios" parent="NSCameraUsageDescription" overwrite="true">
	<string>We are using the Camera to scan vehicle VIN from barcode</string>
	</gap:config-file>
	
	<access origin="*" />
	<allow-intent href="*" />
	<allow-navigation href="http://*/*" />
	<allow-navigation href="https://*/*" />
	<allow-navigation href="http:///opticoat.com/*" />
	<allow-navigation href="data:*" />
	
</widget>
